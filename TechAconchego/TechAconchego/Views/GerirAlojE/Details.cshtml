</div>

<div>
    <button id="voltarButton" class="btn btn-secondary">Voltar</button>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#voltarButton").click(function () {
                history.go(-1);
            });
        });
    </script>
