@model IEnumerable<TechAconchego.Models.Alojamento>

@{
    ViewData["Title"] = "Gerir Alojamento";
}

<h2 class="mb-4">Gerir Alojamento</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
else
{
    <p>
        <a asp-controller="GerirAlojE" asp-action="Create" class="btn btn-primary">Adicionar Alojamento</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Localização
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Preço
                </th>
                <th>
                    Imagem
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localizacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagemUrl))
                        {
                            <img src="@Url.Content(item.ImagemUrl)" alt="Imagem do Alojamento" style="max-width: 100px;" />
                        }
                    </td>
                    <td>
                    <td>
                        <a asp-action="Edit" asp-controller="GerirAlojE" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Details" asp-controller="GerirAlojE" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-controller="GerirAlojE" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
